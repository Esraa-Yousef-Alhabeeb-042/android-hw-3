<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calculator_20a_20background590"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:background="#852626"
        android:backgroundTint="#E2E2E2"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Grade Calculator"
        android:textAlignment="center"
        android:textColor="#191818"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="309dp"
        android:layout_height="66dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp"
        android:background="#A43F51B5"
        android:ems="10"
        android:hint="Quizes%15"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="309dp"
        android:layout_height="66dp"

        android:background="#A43F51B5"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Homework 25%"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="309dp"
        android:layout_height="66dp"
        android:background="#A43F51B5"
        android:ems="10"
        android:hint="Mid terms 30%"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="309dp"
        android:layout_height="66dp"
        android:background="#A43F51B5"
        android:ems="10"
        android:hint="Final 30%"
        android:inputType="textPersonName"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="247dp"
        android:layout_height="66dp"
        android:background="#BC673AB7"
        android:fontFamily="casual"
        android:text="CALCULATE"
        android:textSize="25sp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="40dp"/>

</LinearLayout>